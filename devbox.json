{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.15.0/.schema/devbox.schema.json",
  "packages": [
    "git-cliff@latest",
    "stylua@latest"
  ],
  "shell": {
    "scripts": {
      "dist": "mkdir -p dist && cp -r *.lua scripts/ dist/",
      "format": "stylua .",
      "link": [
        "ln -s $(pwd) \"$HOME/.local/share/Steam/steamapps/common/Don't Starve Together/mods\""
      ]
    }
  }
}
